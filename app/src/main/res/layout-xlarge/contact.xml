<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/monImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/img" />

    <TextView
        android:id="@+id/monNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/monImg"
        android:paddingLeft="11dp"
        android:text="Abdessamade"
        android:textColor="@color/colorAccent"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/monNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/monNom"
        android:layout_toRightOf="@+id/monImg"
        android:paddingLeft="11dp"
        android:text="0755060213"
        android:textColor="@color/colorAccent"
        android:textSize="24sp" />


    <ImageButton
        android:id="@+id/supprimer"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="25dp"
        android:layout_toLeftOf="@+id/appel"
        android:background="#FFF"
        android:scaleType="fitXY"
        android:src="@drawable/supprimer" />

    <ImageButton
        android:id="@+id/appel"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="25dp"
        android:layout_toLeftOf="@+id/edit"
        android:background="#FFF"
        android:scaleType="fitXY"
        android:src="@drawable/appel_small" />

    <ImageButton
        android:id="@+id/edit"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:background="#FFF"
        android:scaleType="fitXY"
        android:src="@drawable/edit_small" />

</RelativeLayout>